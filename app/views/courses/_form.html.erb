<%= render 'shared/errors', obj: @course %>

<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12">
      <div class="card-panel">
        <h3 class="header">New Course</h3>
        <div class="row">
          <%= form_for(@course, html: {class: "col s12"}) do |f| %>
            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :short_name, placeholder: "Enter the course code ex: CS111", autofocus: true %>
                <%= f.label :short_name, class: "active"%>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :name, placeholder: "Enter the course full title"%>
                <%= f.label :name, class: "active" %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :description, placeholder: "Enter a short description"%>
                <%= f.label :description, class: "active" %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.button "Create", class: "btn waves-effect waves-light" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
